<!DOCTYPE html>
<html lang="en">
<%- include("./partials/header.ejs")%>
<%- include("./partials/navbar.ejs")%>
<body>
    <div class="container">
        <h2> A Simple ToDo List App </h2>
        <h2> Hello <%= user.name %>! </h2>
        <form action = "/user/<%= user.id %>/todo/new" method="POST">
               <input type="text" name="description" placeholder="add new task">   <button type = "submit"> Add Task </button>   
        </form>
        <h2> Added Task </h2>
        <% user.listItems.forEach(listItem => { %>
            <li> <%= listItem.description %> <form action="/user/item/<%= listItem.id %>?_method=DELETE" method="POST"> <input type="submit" value="Delete"> </form> 
            </li>
        <% }) %>
		</form>
    </div>

</body>
<%- include("./partials/footer.ejs")%>
</html>     